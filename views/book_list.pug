doctype html
html
  head
    // Import Google Icon Font
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    // Import materialize.css
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css')
    script(src='https://use.fontawesome.com/33a7e617a6.js')
    // Let browser know website is optimized for mobile
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
  body
    nav
      .nav-wrapper.container
        a.brand-logo(href='/') Library
        ul#nav-mobile.right.hide-on-med-and-down
          li.active
            a(href='#') Books
          li
            a(href='/catalog/authors') Authors
    .container
      a(href='/catalog/book/create').btn-floating.btn-large.waves-effect.waves-light.red(style='position: fixed;bottom: 10%;right: 20%;')
        i.material-icons add
        a()
      h3 Books List
      .row
        .col.s8.m7
         each book in book_list
          .card.horizontal
            .card-stacked
              .card-content
                strong
                  a(href=book.url) #{book.title}
                h6 By #{book.author.name}
                h6 ISBN #{book.isbn}
    // Import jQuery before materialize.js
    script(type='text/javascript', src='https://code.jquery.com/jquery-3.2.1.min.js')
    script(type='text/javascript', src='js/materialize.min.js')
    // Compiled and minified JavaScript
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js')
