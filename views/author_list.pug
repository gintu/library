doctype html
html
  head
    // Import Google Icon Font
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    // Import materialize.css
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css')
    script(src='https://use.fontawesome.com/33a7e617a6.js')
    // Let browser know website is optimized for mobile
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
  body
    nav
      .nav-wrapper.container
        a.brand-logo(href='/') Library
        ul#nav-mobile.right.hide-on-med-and-down
          li
            a(href='/catalog/books') Books
          li.active
            a(href='#') Authors
    .container
      a.btn-floating.btn-large.waves-effect.waves-light.red(href='/catalog/author/create', style='position: fixed;bottom: 10%;right: 20%; ')
        i.material-icons add
      h3 Authors List
      .row
        .col.s7.m7
          each author in author_list
           .card.horizontal
             .card-stacked
               .card-content
                 strong 
                   a(href=author.url) #{author.name}
                 h6 Age: #{author.age}
                 h6 Born in: #{author.date_of_birth}
    // Import jQuery before materialize.js
    script(type='text/javascript', src='https://code.jquery.com/jquery-3.2.1.min.js')
    script(type='text/javascript', src='js/materialize.min.js')
    // Compiled and minified JavaScript
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js')